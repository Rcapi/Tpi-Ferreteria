@page
@model Web.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro de Cliente";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Apellido">Apellido:</label>
        <input type="text" class="form-control" id="Apellido" name="Apellido" asp-for="Apellido" />
    </div>

    <div class="form-group">
        <label for="Dni">DNI:</label>
        <input type="text" class="form-control" id="Dni" name="Dni" asp-for="Dni" />
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="text" class="form-control" id="Email" name="Email" asp-for="Email" />
    </div>

    <div class="form-group">
        <label for="Ciudad">Ciudad:</label>
        <input type="text" class="form-control" id="Ciudad" name="Ciudad" asp-for="Ciudad" />
    </div>

    <div class="form-group">
        <label for="Direccion">Dirección:</label>
        <input type="text" class="form-control" id="Direccion" name="Direccion" asp-for="Direccion" />
    </div>

    <div class="form-group">
        <label for="Clave">Clave:</label>
        <input type="password" class="form-control" id="Clave" name="Clave" asp-for="Clave" />
    </div>

    <div class="form-group">
        <label for="ConfirmaClave">Confirmar Clave:</label>
        <input type="password" class="form-control" id="ConfirmaClave" name="ConfirmaClave" asp-for="ConfirmaClave" />
    </div>

    <div class="form-group">
        <label for="Nombre">Nombre:</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" asp-for="Nombre" />
    </div>

    <div class="form-group">
        <label for="Telefono">Teléfono:</label>
        <input type="text" class="form-control" id="Telefono" name="Telefono" asp-for="Telefono" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <button type="button" class="btn btn-secondary" asp-page-handler="Atras">Atrás</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(TempData["MensajeError"] as string))
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensajeError"]
    </div>
}

@if (!string.IsNullOrEmpty(TempData["MensajeExito"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["MensajeExito"]
    </div>
}

